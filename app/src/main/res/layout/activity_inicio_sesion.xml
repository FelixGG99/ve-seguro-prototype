<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioSesion"
    android:id="@+id/Principal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/puebla2" />

    <LinearLayout
        android:id="@+id/LoginPanel"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:background="@drawable/shape_login_shadow"
        android:paddingLeft="50dp"
        android:paddingTop="70dp"
        android:paddingRight="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.207"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Usuario" />

        <EditText
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="60dp"
            android:hint="Contraseña" />

        <TextView
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Olvidaste tu contraseña?"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.3"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/blanco" />

    </LinearLayout>

    <Button
        app:layout_constraintBottom_toBottomOf="@id/LoginPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/BotonInicio"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Iniciar Sesión"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:background="@drawable/boton_redondo"/>
    <ImageView
        app:layout_constraintTop_toTopOf="@id/LoginPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/imageView8"
        android:layout_width="219dp"
        android:layout_height="50dp"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/logo_letrayimagen"
        />

    <LinearLayout
        android:id="@+id/Redes"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/shape_login_shadow"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingTop="40dp"
        android:paddingRight="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.79">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Ingrese con sus redes sociales"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/design_default_color_primary_dark"
            android:background="@drawable/redsocial"
            android:text="Continuar con Google"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/design_default_color_primary_dark"
            android:background="@drawable/redsocial"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>