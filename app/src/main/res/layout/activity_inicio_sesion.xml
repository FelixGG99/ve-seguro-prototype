<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioSesion"
    android:id="@+id/Principal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/puebla2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/blanco"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="523dp" />

    <LinearLayout
        android:id="@+id/LoginPanel"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:background="@drawable/shape_login_shadow"
        android:paddingLeft="50dp"
        android:paddingTop="70dp"
        android:paddingRight="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.207"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Usuario" />

        <EditText
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="60dp"
            android:hint="Contraseña" />
        
        <TextView
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Olvidaste tu contraseña?"/>

    </LinearLayout>

    <Button
        app:layout_constraintBottom_toBottomOf="@id/LoginPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/BotonInicio"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Iniciar Sesión"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:background="@drawable/boton_redondo"/>
    <ImageView
        app:layout_constraintTop_toTopOf="@id/LoginPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/imageView8"
        android:layout_width="219dp"
        android:layout_height="50dp"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/logo_letrayimagen"
        />
</androidx.constraintlayout.widget.ConstraintLayout>